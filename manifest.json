{
  "manifest_version": 3,
  "name": "Checkout Popup",
  "version": "1.0",
  "description": "Displays a popup when user is about to check out",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}